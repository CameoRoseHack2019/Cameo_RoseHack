<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background = "@drawable/bg"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="4"
        android:rowCount="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:layout_row="2"
            android:gravity="center"
            android:text="@string/wait_for_another"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:visibility="invisible"
            tools:textSize="30sp" />

        <Button
            android:id="@+id/button_c5_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@drawable/emptycard"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c6_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@drawable/emptycard" />

        <Button
            android:id="@+id/button_c7_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@drawable/emptycard"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c8_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@drawable/emptycard" />

        <Button
            android:id="@+id/button_c1_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@drawable/card"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c2_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="0"
            android:background="@drawable/card" />

        <Button
            android:id="@+id/button_c3_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@drawable/card"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c4_opp"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="1"
            android:background="@drawable/card" />

        <Button
            android:id="@+id/button_c5"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@drawable/emptycard"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c6"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@drawable/emptycard" />

        <Button
            android:id="@+id/button_c7"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@drawable/emptycard"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c8"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="3"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@drawable/emptycard" />

        <Button
            android:id="@+id/button_middle"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@drawable/dia7"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_card_stack"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:layout_row="2"
            android:background="@drawable/cardstack" />

        <Button
            android:id="@+id/button_c1"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@drawable/card"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c2"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="4"
            android:background="@drawable/card" />

        <Button
            android:id="@+id/button_c3"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@drawable/card"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_c4"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:layout_column="2"
            android:layout_margin="2dp"
            android:layout_row="3"
            android:background="@drawable/card"/>
    </GridLayout>
</android.support.constraint.ConstraintLayout>
