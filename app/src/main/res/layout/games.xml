            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="3"
            android:rotation="180"
            android:text="DRAW" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
